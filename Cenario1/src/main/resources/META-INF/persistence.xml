  <persistence-unit name="MapeamentoPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>br.edu.ifpb.domain.Par</class>
    <class>br.edu.ifpb.domain.Nota</class>
